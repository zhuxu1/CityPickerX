<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingTop="7dp"
    android:paddingRight="5dp"
    android:paddingBottom="7dp">

    <ImageView
        android:id="@+id/x_citypicker_search_close"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:padding="4dp"
        android:src="@mipmap/icon_clear" />

    <LinearLayout
        android:id="@+id/x_citypicker_search_p"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/shape_edt"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/x_citypicker_search_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_search" />

        <EditText
            android:id="@+id/x_citypicker_search_edt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_edt"
            android:gravity="center_vertical|left"
            android:hint="请输入名称或首字母查询"
            android:maxLength="20"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/z_color_black_txt"
            android:textColorHint="@color/z_color_gray_hint"
            android:textCursorDrawable="@drawable/shape_cursor_edt"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/x_citypicker_search_clear"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:padding="8dp"
            android:src="@mipmap/icon_clear"
            android:visibility="invisible" />

    </LinearLayout>

    <TextView
        android:id="@+id/x_citypicker_search_reset"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@drawable/selector_color_txt_black"
        android:textSize="14sp"
        android:visibility="gone" />

</LinearLayout>